<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/alllayout"
    tools:context=".MainActivity"
    >


    <android.support.v7.widget.Toolbar

        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/alllayout"
        android:minHeight="?attr/actionBarSize"
        >
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@color/edittext"
            android:paddingLeft="10dp"
            android:popupBackground="#ccffffff"
            />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/edittext"
            android:paddingLeft="20dp"
            android:popupBackground="#ccffffff" />
        <Switch
            android:paddingLeft="20dp"
            android:id="@+id/swtOnOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSwitchClicked"

            />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="20dp">

    <ListView
        android:id="@+id/list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        ></ListView>

    </LinearLayout>



    <LinearLayout
        android:gravity="center"
        android:background="@color/edittext"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/Transmission"
            android:inputType="text"
            android:layout_width="310dp"
            android:background="@color/edittext"
            android:layout_height="40dp"
            android:hint="コメントを入力してください"
            android:textColorHint="@color/sub"
            />

        <Button
            android:id="@+id/buttonTransmission"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/Transmission"
            android:text="送信"
            android:background="@color/edittextbutton"
            android:textColor="@color/sub"
            />
    </LinearLayout>

</LinearLayout>